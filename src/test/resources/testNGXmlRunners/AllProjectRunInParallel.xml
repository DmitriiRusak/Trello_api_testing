<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All project">

    <test name="All API test" parallel="classes" thread-count="4">
        <classes>
            <class name="api.tests.ActionsAPITest"/>
            <class name="api.tests.BoardApiTest"/>
            <class name="api.tests.CardsApiTest"/>
            <class name="api.tests.ChecklistsAPITest"/>
            <class name="api.tests.LabelsApiTest"/>
            <class name="api.tests.ListsApiTest"/>
            <class name="api.tests.MembersAPITest"/>
        </classes>
    </test>

    <test name="Cucumber run">
        <classes>
            <class name="api.cucumber.runners.ParallelTesting"/>
        </classes>
    </test>

</suite>
<!-- This is config file to run all tests presented in a project
test - All API test - is preset to run in parallel mode
test - Cucumber run - is also set to run in parallel mode. The settings are available in a runner ParallelTesting.java -->